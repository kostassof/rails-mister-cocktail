<h1><%= @cocktail.name %></h1>

<h2>Dose</h2>
   <% @cocktail.doses.each do |dose| %>
   <h3> <%= dose.description %> </h3>
   <h4> <%= Ingredient.find(dose.ingredient_id).name %> </h4>
   <p><%= link_to "Delete this dose", cocktail_dose_path(cocktail_id: @cocktail.id, id: dose.id), method: :delete %></p>
   <% end %>

<p><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></p>

<p><%= link_to "All the cocktails", cocktails_path %></p>

<p><%= link_to "Edit this cocktail", edit_cocktail_path(@cocktail) %></p>

<p><%= link_to "Delete this cocktail", cocktail_path(@cocktail), method: :delete %></p>
